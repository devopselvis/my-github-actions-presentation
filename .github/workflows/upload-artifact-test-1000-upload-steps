name: Upload Artifact Test\n\non: [push]\n\njobs:\n  upload_files:\n    runs-on: ubuntu-latest\n    steps:\n      - name: Create Files\n        run: |\n          for i in $(seq 1 1000); do\n            echo "This is file number $i" > file-$i.txt\n          done\n      - name: Upload Files\n        uses: actions/upload-artifact@v3\n        with:\n          name: all-files\n          path: |\n            $(for i in $(seq 1 1000); do echo 'file-'$i.txt; done)\n          # --- Individual Upload Steps ---\n          $(for i in $(seq 1 1000); do echo "- name: Upload file-$i.txt"; echo "  uses: actions/upload-artifact@v3"; echo "  with:"; echo "    name: file-$i"; echo "    path: file-$i.txt"; done)\n